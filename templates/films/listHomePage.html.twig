{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des films</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.title }}</td>
                <td>
                    <a href="{{ path('films_show', {'id': film.id}) }}">Show</a>
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="3">Aucun film trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}