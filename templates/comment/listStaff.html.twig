{% extends 'baseStaff.html.twig' %}

{% block body %}


    <table class="table" id="adminFilms">
        <thead>
        <tr>
            <th>ID</th>
            <th>NOM PRÉNOM D’AUTEUR</th>
            <th>FILM (ANNÉE)</th>
            <th>DATE</th>
            <th>STATUT</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.getUser.lastname }} {{ comment.getUser.firstname }}</td>
                <td>{{ comment.getFilm.title }} ({{ comment.getFilm.year }})</td>
                <td>{{ comment.getdateAdd|date('d.m.Y') }}</td>
                <td>{{ comment.getStatus }}</td>
                <td>
                    <input type="hidden" value="{{ comment.getUser.lastname }}">
                    <input type="hidden" value="{{ comment.getUser.firstname }}">
                    <input type="hidden" value="{{ comment.comment }}">
                    <div class="btn btn-primary show-comment-details">Voir</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun avis trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="modal-comment-details">
        <div>
            <div class="button-close">X</div>
        </div>
        <div class="modal-comment-info">
            <div class="modal-comment-info-column">
                <div>NOM : <span class="comment-info-lastname"></span></div>
                <div>PRÉNOM : <span class="comment-info-firstname"></span></div>
                <div>COMMENTAIRE :</div>
            </div>
            <div class="modal-comment-info-column">
                <div>DATE : <span class="comment-info-date"></span></div>
                <div>FILM : <span class="comment-info-film"></span></div>
                <div>STATUT : <span class="comment-info-status"></span></div>
            </div>
        </div>
        <div class="modal-comment-text">Test Test</div>
        <div class="modal-comment-actions">
            <a href="#" class="btn btn-primary comment-action-delete">Supprimer</a>
            <a href="#" class="btn btn-primary comment-action-publish">Valider</a>
        </div>
    </div>
{% endblock %}